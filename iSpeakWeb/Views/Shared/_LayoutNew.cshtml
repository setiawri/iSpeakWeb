<body>
    <!-- Main navbar -->
    <div class="navbar navbar-expand-md navbar-dark">
        <div class="navbar-brand wmin-0 mr-5">
            <a href="http://www.ispeakgroup.com" class="d-inline-block">
                <img src="~/assets/images/logo_light.png" alt="">
            </a>
        </div>
        <div class="d-md-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
                <i class="icon-tree5"></i>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbar-mobile">
            <span class="navbar-text ml-md-3 mr-md-auto">
                @*<span class="badge bg-success-400 badge-pill">16 orders</span>*@
            </span>
            <ul class="navbar-nav">
                <li class="nav-item dropdown dropdown-user">
                    <a href="#" class="navbar-nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="~/assets/images/user.png" class="rounded-circle" alt="">
                        <span>@User.Identity.GetFullName()</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="@Url.Action("ChangePassword", "Manage")" class="dropdown-item"><i class="icon-lock2"></i> Change Password</a>
                        <a href="@Url.Action("LogOff", "Account")" class="dropdown-item"><i class="icon-switch2"></i> Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- /main navbar -->
    <!-- Secondary navbar -->
    <div class="navbar navbar-expand-md navbar-light">
        <div class="text-center d-md-none w-100">
            <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-navigation">
                <i class="icon-unfold mr-2"></i>
                Main Menu
            </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @*@{
                var login_session = Session["Login"] as iSpeak.Models.LoginViewModel;
            }*@
                    <select id="Branch" name="Branch" class="navbar-nav-link">
                        @foreach (SelectListItem option in ViewBag.LoginBranch)
                        {
                            <option value="@option.Value" @(option.Value == User.Identity.GetBranches_Id() ? "selected='selected'" : "")>@option.Text</option>
                        }
                    </select>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="navbar-nav-link">
                        <i class="icon-home4 mr-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item" @(ViewBag.SaleMenu == "" ? "" : Html.Raw(ViewBag.SaleMenu))>
                    <a href="@Url.Action("Index", "Sale")" class="navbar-nav-link">
                        <i class="icon-list3 mr-2"></i>
                        Sale
                    </a>
                </li>
                <li class="nav-item" @(ViewBag.PaymentMenu == "" ? "" : Html.Raw(ViewBag.PaymentMenu))>
                    <a href="@Url.Action("Print", "Payments")" class="navbar-nav-link">
                        <i class="icon-cash3 mr-2"></i>
                        Payment
                    </a>
                </li>
                <li class="nav-item" @(ViewBag.SessionsMenu == "" ? "" : Html.Raw(ViewBag.SessionsMenu))>
                    <a href="@Url.Action("Index", "LessonSessions")" class="navbar-nav-link">
                        <i class="icon-meter2 mr-2"></i>
                        Sessions
                    </a>
                </li>
                <li class="nav-item dropdown" @(ViewBag.InventoryMenu == "" ? "" : Html.Raw(ViewBag.InventoryMenu))>
                    <a href="@Url.Action("Index", "Inventory")" class="navbar-nav-link">
                        <i class="icon-clipboard6 mr-2"></i>
                        Inventory
                    </a>
                </li>
                <li class="nav-item dropdown" @(ViewBag.PettyCashMenu == "" ? "" : Html.Raw(ViewBag.PettyCashMenu))>
                    <a href="@Url.Action("Index", "PettyCashRecords")" class="navbar-nav-link">
                        <i class="icon-drawer mr-2"></i>
                        Petty Cash
                    </a>
                </li>
                <li class="nav-item dropdown" @(ViewBag.ReportsMenu == "" ? "" : Html.Raw(ViewBag.ReportsMenu))>
                    <a href="#" class="navbar-nav-link dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-stats-bars2 mr-2"></i>
                        Reports
                    </a>
                    <div class="dropdown-menu">
                        <a href="@Url.Action("NewStudent", "Reports")" class="dropdown-item">New Student</a>
                        <a href="@Url.Action("Payroll", "Reports")" class="dropdown-item">Tutor Payroll</a>
                        <a href="@Url.Action("PayrollPayments", "Reports")" class="dropdown-item">Payroll Payments</a>
                    </div>
                </li>
                <li class="nav-item dropdown" @(ViewBag.MasterDataMenu == "" ? "" : Html.Raw(ViewBag.MasterDataMenu))>
                    <a href="#" class="navbar-nav-link dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-menu2 mr-2"></i>
                        Master Data
                    </a>
                    <div class="dropdown-menu">
                        <a href="@Url.Action("Index", "Role")" class="dropdown-item">User Roles</a>
                        <a href="@Url.Action("Index", "Branches")" class="dropdown-item">Branches</a>
                        <a href="@Url.Action("Index", "Consignments")" class="dropdown-item">Consignments</a>
                        <a href="@Url.Action("Index", "Languages")" class="dropdown-item">Languages</a>
                        <a href="@Url.Action("Index", "LessonTypes")" class="dropdown-item">Lesson Types</a>
                        <a href="@Url.Action("Index", "LessonPackages")" class="dropdown-item">Lesson Packages</a>
                        <a href="@Url.Action("Index", "HourlyRates")" class="dropdown-item">Hourly Rates</a>
                        <a href="@Url.Action("Index", "Vouchers")" class="dropdown-item">Vouchers</a>
                        <a href="@Url.Action("Index", "Suppliers")" class="dropdown-item">Suppliers</a>
                        <a href="@Url.Action("Index", "Products")" class="dropdown-item">Products</a>
                        <a href="@Url.Action("Index", "Units")" class="dropdown-item">Units</a>
                        <a href="@Url.Action("Index", "Services")" class="dropdown-item">Services</a>
                        <a href="@Url.Action("Index", "PettyCashRecordsCategories")" class="dropdown-item">Petty Cash Categories</a>
                        <a href="@Url.Action("Index", "Settings")" class="dropdown-item">Settings</a>
                    </div>
                </li>
                <li class="nav-item dropdown" @(ViewBag.AccountsMenu == "" ? "" : Html.Raw(ViewBag.AccountsMenu))>
                    <a href="@Url.Action("Index", "User")" class="navbar-nav-link">
                        <i class="icon-users2 mr-2"></i>
                        Accounts
                    </a>
                </li>
                <li class="nav-item dropdown" @(ViewBag.FilesMenu == "" ? "" : Html.Raw(ViewBag.FilesMenu))>
                    <a href="@Url.Action("Index", "Files")" class="navbar-nav-link">
                        <i class="icon-file-upload2 mr-2"></i>
                        Files
                    </a>
                </li>
                @*<li class="nav-item dropdown" @(ViewBag.AccountsMenu == "" ? "" : Html.Raw(ViewBag.AccountsMenu))>
            <a href="#" class="navbar-nav-link dropdown-toggle" data-toggle="dropdown">
                <i class="icon-user-tie mr-2"></i>
                Accounts
            </a>
            <div class="dropdown-menu">
                <div class="dropdown-header">Admin</div>
                <a href="@Url.Action("Index", "User")" class="dropdown-item"><i class="icon-users2"></i> User</a>
            </div>
        </li>*@
            </ul>
        </div>
    </div>
    <!-- /secondary navbar -->
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        @RenderBody()
        <!-- /main content -->
    </div>
    <!-- /page content -->
    <!-- Footer -->
    <div class="navbar navbar-expand-lg navbar-light">
        <div class="text-center d-lg-none w-100">
            <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
                <i class="icon-unfold mr-2"></i>
                Footer
            </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-footer">
            <span class="navbar-text">
                &copy; @DateTime.UtcNow.Year - iSpeak Language Center
            </span>
        </div>
    </div>
    <!-- /footer -->
    <!-- Script -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Branch').change(function () {
                
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ChangeBranch", "Branches")',
                    data: { branch_id: $('#Branch').val() },
                    success: function (data) {
                        console.log(data);
                        if (data.status == '200') {
                            var url = '@Url.Action("Index", "Home")';
                            window.location.href = url;
                            $('#Branch').val($('#Branch').val()).trigger('change');
                        }
                        else {
                            bootbox.alert("You don't have access to change Branches.");
                            $('#Branch').val(data.branch_id_before);
                        }
                    }, //end success
                    error: function (result) {
                        bootbox.alert("Error " + result);
                    } //end error
                }); //end ajax

            });
        });
    </script>
    <!-- /script -->

</body>
</html>
