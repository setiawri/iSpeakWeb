            }
            else {
                $('input[aria-controls=DataTables_Table_2]').val($('#listRole_next').val()).keyup();
                //$('input[type=search]').val($('#listRole_next').val()).keyup();
            }
        });

        $('.reminder-by-status').change(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("ReminderByStatus", "Home")',
                data: {
                    key: $('.reminder-by-status').val()
                },
                success: function (data) {
                    dt_reminders.clear().draw();
                    $.each(data.obj, function (index, row) {
                        dt_reminders.row.add([
                            row.Timestamp,
                            row.Description,
                            row.Status,
                            row.Action_Render
                        ]).draw();
                    });
                }, //end success
                error: function (result) {
                    bootbox.alert("Error " + result);
                } //end error
            }); //end ajax
        });

