@model iSpeak.Models.SettingsViewModels

@{
    ViewBag.Root = "Settings";
    ViewBag.Title = "Index";
}

<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <!-- Form inputs -->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">@ViewBag.Root</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <fieldset class="mb-3">
                        <legend class="text-uppercase font-size-sm font-weight-bold">@ViewBag.Title</legend>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.AutoEntryForCashPayments, htmlAttributes: new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.DropDownListFor(model => model.AutoEntryForCashPayments, ViewBag.listCategory as SelectList, "Select Category", new { @class = "form-control select2" })
                            </div>
                            <div class="col-lg-5">
                                @Html.ValidationMessage("AutoEntryForCashPayments", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.RoleAccessForReminders, htmlAttributes: new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.ListBoxFor(model => model.RoleAccessForReminders, ViewBag.listRole as SelectList, new { @class = "form-control select2", @multiple = "multiple" })
                            </div>
                            <div class="col-lg-5">
                                @Html.ValidationMessage("RoleAccessForReminders", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.FullAccessForTutorSchedules, htmlAttributes: new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.ListBoxFor(model => model.FullAccessForTutorSchedules, ViewBag.listRole as SelectList, new { @class = "form-control select2", @multiple = "multiple" })
                            </div>
                            <div class="col-lg-5">
                                @Html.ValidationMessage("FullAccessForTutorSchedules", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.UserSetRoleAllowed, htmlAttributes: new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.DropDownListFor(model => model.UserSetRoleAllowed, ViewBag.listRole as SelectList, "Select Role", new { @class = "form-control select2" })
                            </div>
                            <div class="col-lg-5">
                                @Html.ValidationMessage("UserSetRoleAllowed", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                    <div>
                        <button type="submit" class="btn btn-primary">Save Changes <i class="icon-paperplane ml-2"></i></button>
                    </div>
                </div>
            </div>
            <!-- /form inputs -->
        }
    </div>
    <!-- /content area -->

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.select2').select2();
    })
</script>