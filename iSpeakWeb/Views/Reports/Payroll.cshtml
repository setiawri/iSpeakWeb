@model IEnumerable<iSpeak.Models.TutorPayrollViewModels>

@{
    ViewBag.Root = "Reports";
    ViewBag.Title = "Tutor Payroll";
}

<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">
        <!-- Form inputs -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">@ViewBag.Title</h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                        <a class="list-icons-item" data-action="reload"></a>
                        <a class="list-icons-item" data-action="remove"></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-2">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Date Period</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <select class="form-control select2 period-month">
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                                <input type="number" class="form-control period-year" value="@DateTime.UtcNow.Year">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <button type="button" class="btn btn-sm btn-primary form-control" id="btnGo">Show Data <i class="icon-paperplane ml-2"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover datatable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalHours)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalPayable)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalHours)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalPayable)</td>
                                        <td></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /form inputs -->
    </div>
    <!-- /content area -->

</div>

<script type="text/javascript">

    function Details(branch_id, month, year, tutor_id) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetDetails", "Reports")',
            data: {
                branch_id: branch_id,
                month: month,
                year: year,
                tutor_id: tutor_id
            },
            success: function (data) {
                //console.log(data.obj);
                var dialog = bootbox.alert({
                    title: 'Payroll Details ' + data.tutor_name,
                    size: 'large',
                    message: data.obj,
                    backdrop: true
                });
            }, //end success
            error: function (result) {
                bootbox.alert("Error " + result);
            } //end error
        }); //end ajax
    }

    $(document).ready(function () {
        $('.select2').select2({
            minimumResultsForSearch: -1
        });

        $('.period-month').val('@DateTime.UtcNow.Month').trigger('change');

        // Setting datatable defaults
        $.extend($.fn.dataTable.defaults, {
            autoWidth: false,
            columnDefs: [{
                orderable: false,
                targets: '_all'
                //width: 120,
                //targets: [7]
            }],
            dom: '<"datatable-header"fl><"datatable-scroll"t><"datatable-footer"ip>',
            language: {
                search: '<span>Filter:</span> _INPUT_',
                searchPlaceholder: 'Type to filter...',
                lengthMenu: '<span>Show:</span> _MENU_',
                paginate: { 'first': 'First', 'last': 'Last', 'next': $('html').attr('dir') == 'rtl' ? '&larr;' : '&rarr;', 'previous': $('html').attr('dir') == 'rtl' ? '&rarr;' : '&larr;' }
            }
        });

        var table = $('.datatable').DataTable({
            pagingType: 'full_numbers',
            order: [[0, 'asc']]
        });

        if ('@ViewBag.Approve' == 'False') {
            table.column(6).visible(false);
            $('.chk-not-approved').hide();
        }

        $('#btnGo').click(function () {
            //alert($('.period-month').val() + ' ' + $('.period-year').val());
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetTutorPayroll", "Reports")',
                data: {
                    branch_id: $('#Branch').val(),
                    month: $('.period-month').val(),
                    year: $('.period-year').val()
                },
                success: function (data) {
                    //console.log(data.obj);
                    var datatable = $('.datatable').DataTable();
                    datatable.clear().draw();
                    $.each(data.obj, function (index, row) {
                        datatable.row.add([
                            row.Name,
                            row.TotalHours,
                            parseFloat(row.TotalPayable).toLocaleString(),
                            row.Details
                        ]).draw();
                    });
                }, //end success
                error: function (result) {
                    bootbox.alert("Error " + result);
                } //end error
            }); //end ajax
        });
    });
</script>